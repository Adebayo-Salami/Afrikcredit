                                                                {
                                                                    <button class="btn btn-danger btn-round" disabled="disabled">Is Withdrawing (Bank)....</button>
                                                                }
                                                                else
                                                                {
                                                                    <button id="btnWalletWithdrawal" class="btn btn-info btn-round" onclick="WithrawWallet(@userInvestment.Id, @Model.GetInvestmentMaturityPercentage(userInvestment.DateInvested, userInvestment.Investment.DaysDuration), @Model.AmountGained(userInvestment.Investment.AmountToBeGotten, Model.GetInvestmentMaturityPercentage(userInvestment.DateInvested, userInvestment.Investment.DaysDuration)))">Withdraw To Wallet</button>
                                                                    @*<button id="btnWalletWithdrawal" class="btn btn-info btn-round" onclick="location.href='@Url.Action("WithdrawToWallet", "Dashboard", new { userInvestmentId = userInvestment.Id, percentage = Model.GetInvestmentMaturityPercentage(userInvestment.DateInvested, userInvestment.Investment.DaysDuration), amount = Model.AmountGained(userInvestment.Investment.AmountToBeGotten, Model.GetInvestmentMaturityPercentage(userInvestment.DateInvested, userInvestment.Investment.DaysDuration)) })'">Withdraw To Wallet</button>*@
                                                                    <p>&nbsp;&nbsp;&nbsp;&nbsp;</p>
                                                                    <button id="btnBankWithdrawal" class="btn btn-primary btn-round" onclick="WithrawBank(@userInvestment.Id, @Model.GetInvestmentMaturityPercentage(userInvestment.DateInvested, userInvestment.Investment.DaysDuration), @Model.AmountGained(userInvestment.Investment.AmountToBeGotten, Model.GetInvestmentMaturityPercentage(userInvestment.DateInvested, userInvestment.Investment.DaysDuration)))">Withdraw To Bank</button>
                                                                    @*<button id="btnBankWithdrawal" class="btn btn-primary btn-round" onclick="location.href='@Url.Action("PlaceWithdrawal", "Dashboard", new { userInvestmentId = userInvestment.Id, percentage = Model.GetInvestmentMaturityPercentage(userInvestment.DateInvested, userInvestment.Investment.DaysDuration), amount = Model.AmountGained(userInvestment.Investment.AmountToBeGotten, Model.GetInvestmentMaturityPercentage(userInvestment.DateInvested, userInvestment.Investment.DaysDuration)) })'">Withdraw To Bank</button>*@
                                                                }
                                                                @*@if (Model.GetInvestmentMaturityPercentage(userInvestment.DateInvested, userInvestment.Investment.DaysDuration) < 100)
                                                                {
                                                                    <button class="btn btn-info btn-round" disabled="disabled">Withdraw To Wallet</button>
                                                                    <p>&nbsp;&nbsp;&nbsp;&nbsp;</p>
                                                                    <button class="btn btn-primary btn-round text-white mb-0" disabled="disabled">Withdraw To Bank</button>
                                                                }
                                                                else
                                                                {
                                                                    if (userInvestment.IsWithdrawing)
                                                                    {
                                                                        <button class="btn btn-danger btn-round" onclick="location.href='@Url.Action("WithdrawToWallet", "Dashboard", new { userInvestmentId = userInvestment.Id, percentage = Model.GetInvestmentMaturityPercentage(userInvestment.DateInvested, userInvestment.Investment.DaysDuration), amount = Model.AmountGained(userInvestment.Investment.AmountToBeGotten, Model.GetInvestmentMaturityPercentage(userInvestment.DateInvested, userInvestment.Investment.DaysDuration)) })'">Cancel Withdrawal</button>
                                                                    }
                                                                    else
                                                                    {
                                                                        <button class="btn btn-info btn-round" onclick="location.href='@Url.Action("WithdrawToWallet", "Dashboard", new { userInvestmentId = userInvestment.Id, percentage = Model.GetInvestmentMaturityPercentage(userInvestment.DateInvested, userInvestment.Investment.DaysDuration), amount = Model.AmountGained(userInvestment.Investment.AmountToBeGotten, Model.GetInvestmentMaturityPercentage(userInvestment.DateInvested, userInvestment.Investment.DaysDuration)) })'">Withdraw To Wallet</button>
                                                                        <p>&nbsp;&nbsp;&nbsp;&nbsp;</p>
                                                                        <button class="btn btn-primary btn-round" onclick="location.href='@Url.Action("PlaceWithdrawal", "Dashboard", new { userInvestmentId = userInvestment.Id, percentage = Model.GetInvestmentMaturityPercentage(userInvestment.DateInvested, userInvestment.Investment.DaysDuration), amount = Model.AmountGained(userInvestment.Investment.AmountToBeGotten, Model.GetInvestmentMaturityPercentage(userInvestment.DateInvested, userInvestment.Investment.DaysDuration)) })'">Withdraw To Bank</button>
                                                                    }
                                                                }*@
                                                            </div>
                                                        </div>
                                                    </div>
                                                    <br />
                                                }
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <a href="https://wa.link/da8358" style="position:fixed; width:60px; height:60px; bottom:40px; right:40px; background-color:#25d366; color:#FFF; border-radius:50px; text-align:center; font-size:30px; box-shadow:2px 2px 3px #999; z-index:100" target="_blank">
                                <i class="fa fa-whatsapp my-float" style="margin-top:16px"></i>
                            </a>
                        </div>
                    </div>

                    <footer class="footer">
                        <div class="container-fluid clearfix">
                            <span class="text-muted d-block text-center text-sm-left d-sm-inline-block">Copyright © afrikcreditcom 2020</span>
