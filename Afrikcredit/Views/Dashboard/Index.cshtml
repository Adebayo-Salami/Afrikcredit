                                                                    <div class="modal-footer">
                                                                        <button type="button" class="btn btn-outline-primary" data-dismiss="modal">Close</button>
                                                                    </div>
                                                                </div>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="col-lg-3 col-md-6 mt-md-0 mt-4">
                                                <div class="d-flex">
                                                    <div class="wrapper">
                                                        <h3 class="mb-0 font-weight-semibold">@Model.UserInvestments.Count()</h3>
                                                        <h5 class="mb-0 font-weight-medium text-primary">Total Investments</h5>
                                                    </div>
