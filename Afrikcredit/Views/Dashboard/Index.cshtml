        <script>
            function WithrawWallet(investmentID, percentage, amount) {
                if (confirm('Are you sure?')) {
                    window.location.href = "@Html.Raw(Url.Action("WithdrawToWallet", "Dashboard", new { userInvestmentId = "__investID__", percentage = "__percent__", amount = "__amt__" }))"
                        .replace('__percent__', percentage)
                        .replace('__investID__', investmentID)
                        .replace('__amt__', amount);
                }
                else {
                    return false;
                }
            }

            function WithrawBank(investmentID, percentage, amount) {
                if (confirm('Are you sure?')) {
                    window.location.href = "@Html.Raw(Url.Action("PlaceWithdrawal", "Dashboard", new { userInvestmentId = "__investID__", percentage = "__percent__", amount = "__amt__" }))"
                        .replace('__percent__', percentage)
                        .replace('__investID__', investmentID)
                        .replace('__amt__', amount);
                }
                else {
                    return false;
                }
            }
        </script>
