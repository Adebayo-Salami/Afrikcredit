                                                                            <li>Vendor 4 : <a class="btn btn-info" href="https://wa.link/jmi4fi" target="_blank">Click Me</a></li>
                                                                            <li></li>
                                                                            <li>Vendor 5 : <a class="btn btn-info" href="https://wa.link/d4t442" target="_blank">Click Me</a></li>
                                                                        </ul>
                                                                    </div>
                                                                    <!--Footer-->
                                                                    <div class="modal-footer">
                                                                        <button type="button" class="btn btn-outline-primary" data-dismiss="modal">Close</button>
                                                                    </div>
                                                                </div>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-8 grid-margin stretch-card">
                                <div class="card">
                                    <div class="card-body">
                                        <h4 class="card-title mb-0">Purchase An Investment Plan</h4>
                                        <div class="d-flex flex-column flex-lg-row">
                                            <p>Select which of the investment plan you want to purchase and click BUY</p>
                                        </div>
                                        <div class="d-flex flex-column flex-lg-row">
                                            <div class="row">
                                                @if (Model.AvailableInvestments.Count <= 0)
                                                {
                                                    <h4><i>Sorry, No available investments yet! Kindly check back later.</i></h4>
                                                }
                                                @foreach (var investment in Model.AvailableInvestments)
                                                {
                                                    <div class="data-wrapper d-flex mt-2 mt-lg-0">
                                                        <div class="wrapper">
                                                            <h5 class="mb-0">@investment.Name (You get @investment.AmountToBeGotten | Duration @investment.DaysDuration days)</h5>
                                                            <div class="d-flex align-items-center">
                                                                <h4 class="font-weight-semibold mb-0">@investment.Cost</h4>
                                                                <small class="ml-2 text-gray d-none d-lg-block">You get <b>@investment.AmountToBeGotten</b> naira after <b>@investment.DaysDuration</b> days</small>
                                                                &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                                                                <button style="text-align:right" class="btn btn-info" onclick="location.href = '@Url.Action("PurchaseANewInvestment", "Dashboard", new { investmentID = investment.Id})'">BUY (@investment.Name)</button>
                                                            </div>
                                                        </div>
                                                    </div>
                                                    <br />
                                                }
                                            </div>
                                            <div class="ml-lg-auto" id="sales-statistics-legend"></div>
                                        </div>
                                    </div>
                                </div>
                            </div>
